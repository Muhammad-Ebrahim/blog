<%= simple_form_for @service do |f| %>
    <%= f.input :title, label: "Write your Awesome title" %>
    <%= f.input :slug, label: "Write your Awesome slug" %>
    <%= f.input :description, label: "Describe your POC with degnity" %>
    <%= f.input :content, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}} %>
    <%= f.submit :publish %>
<% end %>